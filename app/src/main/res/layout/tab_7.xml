<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/screen7Layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/screen_7_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/plant"
            android:layout_width="50dp"
            android:layout_height="80dp"
            android:src="@drawable/screen_7_plant"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"/>

        <ImageView
            android:id="@+id/lady"
            android:layout_width="150dp"
            android:layout_height="170dp"
            android:layout_marginStart="50dp"
            android:layout_marginBottom="20dp"
            android:src="@drawable/screen_7_lady"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintBottom_toBottomOf="@id/background" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@+id/images"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab7_title"
            android:fontFamily="@font/arial_rounded_mt"
            android:letterSpacing="-0.05"
            android:gravity="center"
            android:textSize="25sp"
            android:textColor="#253A7F"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/textBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/tab7_text"
            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto_light"
            android:gravity="center"
            android:textSize="17sp"
            android:textColor="#313131"
            app:layout_constraintTop_toBottomOf="@+id/textTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>