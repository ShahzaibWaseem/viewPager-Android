<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/screen2Layout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/images"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        app:layout_constraintStart_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/background"
            android:layout_width="300dp"
            android:layout_height="220dp"
            android:src="@drawable/screen_2_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/computer"
            android:layout_width="250dp"
            android:layout_height="200dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/screen_2_computer"
            app:layout_constraintBottom_toBottomOf="@+id/background"
            app:layout_constraintStart_toStartOf="@+id/background"
            app:layout_constraintEnd_toEndOf="@+id/background"/>

        <ImageView
            android:id="@+id/doctor"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="45dp"
            android:src="@drawable/screen_2_doctor"
            app:layout_constraintBottom_toBottomOf="@id/background"
            app:layout_constraintEnd_toEndOf="@+id/computer" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/text"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:src="@drawable/screen_3_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/images" />

</androidx.constraintlayout.widget.ConstraintLayout>